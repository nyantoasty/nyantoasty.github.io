// Firestore Security Rules for Development
// SIMPLE DEVELOPMENT RULES - Use these for now!

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read/write any document
    // This is permissive but safe for development since only signed-in users can access
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

